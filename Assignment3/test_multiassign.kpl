PROGRAM TestMultiAssign;

VAR
  x : INTEGER;
  y : INTEGER;
  z : INTEGER;
  a : INTEGER;
  b : INTEGER;
  arr : ARRAY (.5.) OF INTEGER;

BEGIN
  (* Example 1: Simple multiple assignment *)
  x, y, z := 10, 20, 30;

  (* Example 2: Multiple assignment with expressions *)
  x, y, z := 1 + 2, 3 * 4, 5 - 1;

  (* Example 3: Multiple assignment with variables *)
  a := 100;
  b := 200;
  x, y := a, b;

  (* Example 4: Swap variables *)
  a := 5;
  b := 10;
  a, b := b, a;

  (* Example 5: Multiple assignment with array elements *)
  arr(.0.), arr(.1.), arr(.2.) := 1, 2, 3;

  (* Example 6: Mixed assignment *)
  x, arr(.0.), y := 100, 200, 300

END.
